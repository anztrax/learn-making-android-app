<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SecondActivity">
    <Button
        android:id="@+id/toggleMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toggle Menu"
        android:onClick="onClickToggleMenuBar"/>
    <!-- this is for reply button -->
    <ImageButton
        android:layout_below="@id/toggleMenu"
        android:id="@+id/imageButtonReply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_revert"
        android:onClick="showPopUpMenu" />
    <Button
        android:layout_below="@id/imageButtonReply"
        android:id="@+id/gotoContextMenuActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Context Menu Activity"
        android:onClick="onClickGotToContextMenuActivity" />
    <Button
        android:layout_below="@id/gotoContextMenuActivity"
        android:id="@+id/gotoBatchContextMenuActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Context Batch Activity"
        android:onClick="onClickGotToContextBatchActivity"/>

    <Button
        android:layout_below="@id/gotoBatchContextMenuActivity"
        android:id="@+id/learnSimpleFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Learn Simple Fragment"
        android:onClick="onClickGotoSimpleFragmentActivity"/>

    <Button
        android:layout_below="@id/learnSimpleFragment"
        android:id="@+id/learnChangeAtRuntimeFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Learn change at runtime Fragment"
        android:onClick="onClickGotoLearnChangeAtRuntimeFragmentActivity"/>

    <Button
        android:layout_below="@id/learnChangeAtRuntimeFragment"
        android:id="@+id/learnCommunicateWithOtherFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Learn communicate with other fragment"
        android:onClick="onClickLearnCommunicateWithOtherFragmentActivity"/>

    <Button
        android:id="@+id/doDefaultSearchable"
        android:layout_below="@id/learnCommunicateWithOtherFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="do default searchable"
        android:onClick="onClickDefaultSearchable"/>

    <Button
        android:layout_below="@id/doDefaultSearchable"
        android:id="@+id/immersiveModeActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="show Immersive Mode Activity"
        android:onClick="gotoImmersiveModeActivity"/>
</RelativeLayout>
