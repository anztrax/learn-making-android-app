<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_learn_open_glmain"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hello.test.learnandroid.LearnOpenGLMainActivity">
    <Button
        android:onClick="onClickSimpleOpenGLSetup"
        android:text="Simple Open GL Setup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:text="Open GL Triangle"
        android:onClick="onClickDrawSimpleShapeActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:text="Projection and Camera"
        android:onClick="onClickProjectionAndCameraActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:text="Creating Movement Activity"
        android:onClick="onClickCreatingMovementActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:text="Rotate Rectangle With User Input Activity"
        android:onClick="onClickRotateRectangleWithUserInputActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
