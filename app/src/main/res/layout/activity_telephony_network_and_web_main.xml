<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_telephony_network_and_web_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.hello.test.learnandroid.TelephonyNetworkAndWebMainActivity">
    <Button
        android:text="dial phone"
        android:onClick="onClickMakePhoneCallActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:text="Learn Phone State"
        android:onClick="onClickLearnPhoneStateActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:text="Send SMS Activity"
        android:onClick="onClickSendSMSActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:text="Boardcast SMS Receiver"
        android:onClick="onClickSMSBoardcastReceiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:text="Learn Web View Activity"
        android:onClick="onClickLearnWebViewActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:text="Volley Library Activity"
        android:onClick="onClickLearnVolleyLibraryActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:text="Volley With Cancel and Request connection"
        android:onClick="onClickLearnVolleyWithCancelAndRequestConnectionActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:text="Volley JSON Request"
        android:onClick="onClickVolleyRequestJSONActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:text="Volley Image Request"
        android:onClick="onClickVolleyImageRequestActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
